<style>
    .root{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .subdiv{
        width: 600px;
        margin-top: 30px;
        background: #7f8c8d;
        padding: 20px;
    }
    .gap{
        padding: 7px;
    }
   
    .aligncenter{
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
<html>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/javascriptS/project.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
    <title>Admin Portal</title>
    <body>
    <div class='root'>
    <div class='subdiv'>
      <div class='row gap' style='display:flex; align-items: center; justify-content: center; font-size: 20px; font-weight: bold; letter-spacing: 3px;'>
        Admin Portal
      </div>   
      <form action='/product/insertrecord' method='post' enctype="multipart/form-data">
        <div class='row gap'>
            <div class='col'>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                      <input required title='Pls Input Alphabets Only...' pattern='[a-z A-Z]+' name='companyname' class="input" type="text" placeholder="Company Name">
                      <span class="icon is-small is-left">
                        <i class="fa fa-building"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </p>
                </div>
            </div>
            <div class='col'>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                      <input required pattern='[a-z A-Z]+' name='model' class="input" type="text" placeholder="Model">
                      <span class="icon is-small is-left">
                        
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </p>
                </div>
            </div>
        </div>
            <div class='row gap rowcenter'>
                <div class='col aligncenter'>
                    <div class="field">
                        <label class="radio">
                             <div class="control">
                            <input required type="radio" name="generation1" id="1" value='4G'>4G
                        </label>
                        <label class="radio">
                            <input required type="radio" name="generation2" id="2" value='5G'>5G
                            
                        </label>
                    </div>
                </div>
            </div>
            <div class='col'>
                <div class="field">
                 <p class="control has-icons-left has-icons-right">
                  <input required name='manufacturingdate' class="input" type="date" placeholder="Manufacturing Date">
                  <span class="icon is-small is-left">
                    <i class="fas fa-calender"></i>
                  </span>
                  <span class="icon is-small is-right">
                    <i class="fas fa-check"></i>
                  </span>
                 </p>
                </div>
            </div>
          </div>

        <div class='row gap'>
            <div class='col'>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                      <input required name='description' class="input" type="textbox" placeholder="Description">
                      <span class="icon is-small is-left">
                        <i class="fa fa-list-alt"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </p>
                  </div>
            </div>
        </div>

        <div class='row gap'>
            <div class='col'>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                      <input name='aboutcompany' class="input" type="text" placeholder="About Company">
                      <span class="icon is-small is-left">
                        <i class="fas fa-address-card-o"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </p>
                  </div>
            </div>
        </div>

      

        <div class='row gap'>
            <div class='col'>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                      <input required name='emailid' class="input" type="email" placeholder="Email Id">
                      <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </p>
                </div>
            </div>
            <div class='col'>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                      <input required title='Pls Input Valid Mobile no...' pattern='[0-9]{10}' name='mobileno' class="input" type="text" placeholder="Mobile No.">
                      <span class="icon is-small is-left">
                        <i class="fas fa-mobile"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </p>
                </div>
            </div>
        </div>

        <div class='row gap'>

          <div class='col'>
              <div class="field">
                  <p class="control has-icons-left has-icons-right">
                    <input required name='price' class="input" type="text" placeholder="Price">
                    <span class="icon is-small is-left">
                    
                    </span>
                    <span class="icon is-small is-right">
                      <i class="fas fa-check"></i>
                    </span>
                  </p>
              </div>
          </div>
      </div>
      <div class='row gap'>
        <div class='col'>
          <div class="file is-info has-name">
            <label class="file-label">
              <input required name="picture" class="file-input" type="file">
              <span class="file-cta">
                <span class="file-icon">
                  <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">
                  Info fileâ€¦
                </span>
              </span>
              <span class="file-name">
                Screen Shot 2017-07-29 at 15.54.25.png
              </span>
            </label>
          </div>
        </div>
      </div>

     <div class='row gap'>
      <div class='col aligncenter'>
        <button style='width:200' type='submit' class="button is-link">Submit</button>
      </div>
      <div class='col aligncenter'>
        <button style='width:200' type='reset' class="button is-link">Reset</button>
      </div>
     </div>
    </form>
    <div class='row gap'>
      <div class='col aligncenter'>
        <% if(status==true) {%>
          <div style='font-size: 16; color: green; font-weight: bold;'>Record Submitted Sucessfully</div>
          <%} else if(status==false){%>
            <div style='font-size: 16; color: red; font-weight: bold;'>Server Error Fail to Submit Record</div>
            <%} %>
      </div></div>
    </div>
  </div>
    </body>
</html>