<style>
    .root{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .subdiv{
        width: 600px;
        margin-top: 30px;
        background: #7f8c8d;
        padding: 20px;
    }
    .gap{
        padding: 7px;
    }
    
    .aligncenter{
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
<html>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/javascriptS/project.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
    <title>Amdin Portal</title>
    <body>
    <div class='root'>
    <div class='subdiv'>
      <div class='row gap' style='display:flex; align-items: center; justify-content: center; font-size: 20px; font-weight: bold; letter-spacing: 3px;'>
        Product Updation
      </div>   
      <form action='/product/editdeleterecord'>
        <input type='hidden' value='<%=data.companyid%>' name='companyid'>
        <div class='row gap'>
            <div class='col'>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                      <input value='<%=data.companyname%>' required title='Pls Input Alphabets Only...' pattern='[a-z A-Z]+' name='companyname' class="input" type="text" placeholder="Company Name">
                      <span class="icon is-small is-left">
                        <i class="fa fa-building"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </p>
                </div>
            </div>
            <div class='col'>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                      <input value='<%=data.model%>' required title='Pls Input Alphabets Only...' pattern='[a-z A-Z]+' name='model' class="input" type="text" placeholder="Model">
                      <span class="icon is-small is-left">
                        <i class="fas fa-user-circle"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </p>
                </div>
            </div>
        </div>
            <div class='row gap rowcenter'>
                <div class='col aligncenter'>
                    <div class="field">
                        <label class="radio">
                             <div class="control">
                                 <% if(data.generation=='4G') {%>
                            <input required type="radio" name="generation" value='4G' checked>
                            <%}else{%>
                                <input required type='radio' name='generation' value='4G'>
                                <%}%>
                            
                        </label>
                        <label class="radio">
                            <% if(data.generation=='5G') {%>
                            <input required type="radio" name="generation" value='5G' checked>
                            <%}else{%>
                                <input required type='radio' name='generation' value='5G'>
                                <%}%>
                            
                        </label>
                    </div>
                </div>
            </div>
            <div class='col'>
                <div class="field">
                 <p class="control has-icons-left has-icons-right">
                     <% var bd=new Date(data.manufacturingdate)
                     d=bd.getDate()
                     m=bd.getMonth()+1
                     y=bd.getFullYear()
                     if(d>=1 && d<=9)
                     {d='0'+d}
                     if(m>=1 && m<=9)
                     {m='0'+m}
                     tdb=y+'-'+m+'-'+d
                     %>
                  <input value='<%=tdb%>' required name='manufacturingdate' class="input" type="date" placeholder="Manufacturing Date">
                  <span class="icon is-small is-left">
                    <i class="fas fa-calender"></i>
                  </span>
                  <span class="icon is-small is-right">
                    <i class="fas fa-check"></i>
                  </span>
                 </p>
                </div>
            </div>
          </div>

        <div class='row gap'>
            <div class='col'>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                      <input value='<%=data.description%>' required name='description' class="input" type="text" placeholder="Description">
                      
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </p>
                  </div>
            </div>
        </div>

        <div class='row gap'>
            <div class='col'>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                      <input value='<%=data.aboutcompany%>' name='aboutcompany' class="input" type="text" placeholder="About Company">
                     
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </p>
                  </div>
            </div>
        </div>

        <div class='row gap'>
            <div class='col'>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                      <input value='<%=data.emailid%>' required name='emailid' class="input" type="email" placeholder="Email Id">
                      <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </p>
                </div>
            </div>
            <div class='col'>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                      <input value='<%=data.mobileno%>' required title='Pls Input Valid Mobile no...' pattern='[0-9]{10}' name='mobileno' class="input" type="text" placeholder="Mobile No.">
                      <span class="icon is-small is-left">
                        <i class="fas fa-mobile"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </p>
                </div>
            </div>
        </div>

        <div class='row gap'>
          <div class='col'>
              <div class="field">
                  <p class="control has-icons-left has-icons-right">
                    <input value='<%=data.price%>' required name='price' class="input" type="text" placeholder="Price">
                    <span class="icon is-small is-left">
                      <i class="fas fa-money"></i>
                    </span>
                    <span class="icon is-small is-right">
                      <i class="fas fa-check"></i>
                    </span>
                  </p>
              </div>
          </div>
      </div>
      
      
     <div class='row gap'>
      <div class='col aligncenter'>
        <button style='width:200' type='submit' value='Edit' name='btn' class="button is-link">Edit</button>
      </div>
      <div class='col aligncenter'>
        <button style='width:200' type='submit' value='Delete' name='btn' class="button is-link">Delete</button>
      </div>
     </div>
    </form>
    </div>
  </div>
    </body>
</html>