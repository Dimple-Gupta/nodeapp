<style>
    .root{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .subdiv{
        width: auto;
        margin-top: 30px;
        background: #7f8c8d;
        padding: 20px;
    }
    .gap{
        padding: 7px;
    }
    
    .aligncenter{
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
<html>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
    <body>
        <div class='root'>
            <div class='subdiv'>
              <div class='row gap' style='display:flex; align-items: center; justify-content: center; font-size: 20px; font-weight: bold; letter-spacing: 3px;'>
                Mobile List
              </div>
             <table class="table">
              <thead>
              <tr>
                <th><abbr>ID</abbr></th>
                <th><abbr>Company/<br>Generation</abbr></th>
                <th><abbr>Manufacturing Date</abbr></th>
                <th><abbr>Description</abbr></th>
                <th><abbr>About Company</abbr></th>
                <th><abbr>Contact</abbr></th>
                <th><abbr>Price</abbr></th>
                <th><abbr>picture</abbr></th>
                <th><abbr>Update</abbr></th>
              </tr>
            </thead>
            <tbody>
                <% data.map((item,index)=>{%>
                   <tr>
                    <td><b> <%=item.companyid%></b></td>
                    <td><%=item.companyname%> <%=item.model%><br> <%=item.generation%>4G<br> <%=item.generation%>5G </td>
                    <% var d=new Date(item.manufacturingdate)
                       var bd=d.getDate()+"-"+(d.getMonth()+1)+"-"+d.getFullYear()
                       %>
                    <td> <%=bd%></td>
                    <td> 
                       <%=item.description%><br>
                    </td>
                    <td><%=item.aboutcompany%></td>
                    <td> 
                            <%=item.emailid%><br><%=item.mobileno%>
                    </td>
                    <td> 
                        <%=item.price%>
                </td>
                <td>
                    <a href='/product/showimage?companyid=<%=item.companyid%> &pictures=<%=item.picture%>&companyname=<%item.companyname%>&model=<%item.model%>'><img src='/images/<%=item.picture%>' width='60'></a>
                </td>
                <td>
                    <a href='/product/displaybyid?companyid=<%=item.companyid%>'>Update</a>
                </td>
                </tr>
                   <%})%>
            </tbody>
          </table>
            </div>
        </div>
    </body>
</html>